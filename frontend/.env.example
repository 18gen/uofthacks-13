# Required: Mapbox access token for map display
# Get one free at https://account.mapbox.com/
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_token_here

# Optional: Amplitude API key for analytics tracking
# Get one at https://analytics.amplitude.com/
NEXT_PUBLIC_AMPLITUDE_API_KEY=your_amplitude_api_key

# Admin password for the admin panel (default: "admin")
NEXT_PUBLIC_ADMIN_PASSWORD=admin

# Optional: OpenAI API key for real AI-powered image analysis
# If not set, the app uses deterministic mock analysis
OPENAI_API_KEY=sk-your_openai_api_key_here

# Optional: TwelveLabs API key for video analysis (future feature)
TWELVELABS_API_KEY=your_twelvelabs_api_key_here

# MongoDB Atlas connection string
# Get this from MongoDB Atlas: Connect > Drivers > Copy connection string
# Replace <password> with your database user password
MONGODB_URI=mongodb+srv://ichihashigen_db_user:<password>@cluster.gdvlecy.mongodb.net/?appName=cluster
